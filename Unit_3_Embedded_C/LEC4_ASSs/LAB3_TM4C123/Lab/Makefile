#======================================================================================
CC=arm-none-eabi-
CFLAGS=-mcpu=cortex-m4 -gdwarf-2 -g
INCS=-I .
LIBS=
SRC=$(wildcard *.c)
OBJ=$(SRC:.c=.o)
AS=$(wildcard *.s)
AS_OBJ=$(AS:.s=.o)
LINKER =$(wildcard *.ld)
PROJ_NAME=Karem_Lab3
#--------------------------------------------------------------------------------------

all: $(PROJ_NAME).bin
	@echo "================= Building Process is done ================="

#--------------------------------------------------------------------------------------
%.o: %.c
	$(CC)gcc.exe $(CFLAGS) $(INCS) -c $< -o $@

#--------------------------------------------------------------------------------------

%.o: %.s
	$(CC)as.exe $(CFLAGS) $< -o $@

#--------------------------------------------------------------------------------------

$(PROJ_NAME).elf: $(OBJ) $(AS_OBJ)
	$(CC)ld.exe -T $(LINKER) $(INCS) $(OBJ) -Map=Map_File.map -o $@
	cp $(PROJ_NAME).elf $(PROJ_NAME).axf

#--------------------------------------------------------------------------------------

$(PROJ_NAME).bin: $(PROJ_NAME).elf
	$(CC)objcopy.exe -O binary $< $@

#--------------------------------------------------------------------------------------

clean: 
	rm *.elf *.bin

clean_all: 
	rm *.o *.elf *.bin
	@echo "================= It is been deleted ================="



#--------------------------------------------------------------------------------------